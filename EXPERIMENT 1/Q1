#include <stdio.h>
#include <stdlib.h>

int main() 
{
    int count, i;
    int *arr;
    int total = 0;
    float average;

    printf("Enter the total number of elements: ");
    scanf("%d", &count);

    if (count <= 0)
    {
        printf("Invalid size entered.\n");
        return 1;
    }

    arr = (int *)calloc(count, sizeof(int));

    if (arr == NULL)
    {
        printf("Memory allocation failed.\n");
        return 1;
    }

    printf("\nEnter %d integers:\n", count);

    for (i = 0; i < count; i++)
    {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
        total += arr[i];
    }

    printf("\nThe entered elements are:\n");
    for (i = 0; i < count; i++)
    {
        printf("%d ", arr[i]);
    }

    average = (float)total / count;

    printf("\n\nSum = %d", total);
    printf("\nAverage = %.2f\n", average);

    free(arr);
    arr = NULL;

    printf("\nMemory released successfully.\n");

    return 0;
}
