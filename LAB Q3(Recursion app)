#include <stdio.h>

long long findFact(int num)
{
    if(num <= 1)
        return 1;
        
    return num * findFact(num - 1);
}

int main()
{
    int value;
    long long result;

    printf("Enter any number: ");
    scanf("%d", &value);

    result = findFact(value);

    printf("Factorial of %d is %lld", value, result);

    return 0;
}

