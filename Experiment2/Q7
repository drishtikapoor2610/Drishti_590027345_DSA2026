#include <stdio.h>
#include <stdlib.h>

struct DNode {
    int data;
    struct DNode *prev;
    struct DNode *next;
};

void displayForward(struct DNode *head) {
    int count = 0;
    struct DNode *temp = head;

    if(head == NULL) {
        printf("List is empty.\n");
        return;
    }

    printf("Forward Traversal: ");
    while(temp != NULL) {
        printf("%d <-> ", temp->data);
        temp = temp->next;
        count++;
    }
    printf("NULL\n");
    printf("Total Nodes: %d\n", count);
}

void displayBackward(struct DNode *head) {
    struct DNode *temp = head;

    if(head == NULL) {
        printf("List is empty.\n");
        return;
    }

    while(temp->next != NULL)
        temp = temp->next;

    printf("Backward Traversal: ");
    while(temp != NULL) {
        printf("%d <-> ", temp->data);
        temp = temp->prev;
    }
    printf("NULL\n");
}

void insertBeginning(struct DNode **head, int value) {
    struct DNode *newNode = malloc(sizeof(struct DNode));
    newNode->data = value;
    newNode->prev = NULL;
    newNode->next = *head;

    if(*head != NULL)
        (*head)->prev = newNode;

    *head = newNode;
}

void insertEnd(struct DNode **head, int value) {
    struct DNode *newNode = malloc(sizeof(struct DNode));
    newNode->data = value;
    newNode->next = NULL;

    if(*head == NULL) {
        newNode->prev = NULL;
        *head = newNode;
        return;
    }

    struct DNode *temp = *head;
    while(temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
    newNode->prev = temp;
}

void insertAfter(struct DNode *head, int key, int value) {
    struct DNode *temp = head;

    while(temp != NULL && temp->data != key)
        temp = temp->next;

    if(temp == NULL) {
        printf("Element not found.\n");
        return;
    }

    struct DNode *newNode = malloc(sizeof(struct DNode));
    newNode->data = value;

    newNode->next = temp->next;
    newNode->prev = temp;

    if(temp->next != NULL)
        temp->next->prev = newNode;

    temp->next = newNode;
}

void deleteBeginning(struct DNode **head) {
    if(*head == NULL) {
        printf("List already empty.\n");
        return;
    }

    struct DNode *temp = *head;
    *head = temp->next;

    if(*head != NULL)
        (*head)->prev = NULL;

    free(temp);
    printf("First node deleted.\n");
}

void deleteEnd(struct DNode **head) {
    if(*head == NULL) {
        printf("List already empty.\n");
        return;
    }

    struct DNode *temp = *head;

    if(temp->next == NULL) {
        free(temp);
        *head = NULL;
        printf("Last node deleted.\n");
        return;
    }

    while(temp->next != NULL)
        temp = temp->next;

    temp->prev->next = NULL;
    free(temp);

    printf("Last node deleted.\n");
}

void deleteGiven(struct DNode **head, int key) {
    struct DNode *temp = *head;

    while(temp != NULL && temp->data != key)
        temp = temp->next;

    if(temp == NULL) {
        printf("Element not found.\n");
        return;
    }

    if(temp->prev != NULL)
        temp->prev->next = temp->next;
    else
        *head = temp->next;

    if(temp->next != NULL)
        temp->next->prev = temp->prev;

    free(temp);
    printf("Node with value %d deleted.\n", key);
}

int main() {
    struct DNode *head = NULL;
    int choice, value, key;

    do {
        printf("\n1.Insert Beginning");
        printf("\n2.Insert End");
        printf("\n3.Insert After Given Element");
        printf("\n4.Delete Beginning");
        printf("\n5.Delete End");
        printf("\n6.Delete Given Element");
        printf("\n7.Display Forward");
        printf("\n8.Display Backward");
        printf("\n0.Exit");
        printf("\nEnter choice: ");
        scanf("%d", &choice);

        switch(choice) {

            case 1:
                printf("Enter value: ");
                scanf("%d", &value);
                insertBeginning(&head, value);
                break;

            case 2:
                printf("Enter value: ");
                scanf("%d", &value);
                insertEnd(&head, value);
                break;

            case 3:
                printf("Insert after which element? ");
                scanf("%d", &key);
                printf("Enter new value: ");
                scanf("%d", &value);
                insertAfter(head, key, value);
                break;

            case 4:
                deleteBeginning(&head);
                break;

            case 5:
                deleteEnd(&head);
                break;

            case 6:
                printf("Enter value to delete: ");
                scanf("%d", &key);
                deleteGiven(&head, key);
                break;

            case 7:
                displayForward(head);
                break;

            case 8:
                displayBackward(head);
                break;

            case 0:
                printf("Program exited.\n");
                break;

            default:
                printf("Invalid choice.\n");
        }

    } while(choice != 0);

    return 0;
}
