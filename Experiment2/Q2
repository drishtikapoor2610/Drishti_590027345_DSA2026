#include <stdio.h>
#include <stdlib.h>

struct ListUnit {
    int value;
    struct ListUnit *next;
};

void createList(struct ListUnit **start, int n) {
    struct ListUnit *temp, *node;
    int data;

    for(int i = 1; i <= n; i++) {
        node = (struct ListUnit*)malloc(sizeof(struct ListUnit));

        printf("Enter value %d: ", i);
        scanf("%d", &data);

        node->value = data;
        node->next = NULL;

        if(*start == NULL) {
            *start = node;
        } else {
            temp = *start;
            while(temp->next != NULL)
                temp = temp->next;

            temp->next = node;
        }
    }
}

int searchElement(struct ListUnit *start, int key) {
    int position = 1;
    struct ListUnit *move = start;

    while(move != NULL) {
        if(move->value == key)
            return position;

        move = move->next;
        position++;
    }
    return -1;
}

void displayList(struct ListUnit *start) {
    printf("\nCurrent List: ");
    while(start != NULL) {
        printf("%d -> ", start->value);
        start = start->next;
    }
    printf("NULL\n");
}

int main() {
    struct ListUnit *start = NULL;
    int n, key, result;

    printf("How many nodes do you want to insert? ");
    scanf("%d", &n);

    createList(&start, n);

    displayList(start);

    printf("Enter element to search: ");
    scanf("%d", &key);

    result = searchElement(start, key);

    if(result == -1)
        printf("Element not found in the list.\n");
    else
        printf("Element found at position %d\n", result);

    return 0;
}
