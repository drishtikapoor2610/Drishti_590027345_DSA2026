#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
    struct Student *next;
};

void insertRecord(struct Student **head) {
    struct Student *node = malloc(sizeof(struct Student));

    printf("Enter Roll: ");
    scanf("%d", &node->roll);

    printf("Enter Name: ");
    scanf("%s", node->name);

    printf("Enter Marks: ");
    scanf("%f", &node->marks);

    node->next = *head;
    *head = node;
}

void displayRecords(struct Student *head) {
    while (head != NULL) {
        printf("\nRoll: %d  Name: %s  Marks: %.2f",
               head->roll, head->name, head->marks);
        head = head->next;
    }
}
