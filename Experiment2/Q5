#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node *next;
};

void insertEnd(struct Node **head, int value) {
    struct Node *newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;

    if(*head == NULL) {
        *head = newNode;
        return;
    }

    struct Node *temp = *head;
    while(temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
}

void display(struct Node *head) {
    if(head == NULL) {
        printf("List is empty.\n");
        return;
    }

    printf("Linked List: ");
    while(head != NULL) {
        printf("%d -> ", head->data);
        head = head->next;
    }
    printf("NULL\n");
}

void reverseData(struct Node *head) {
    int count = 0, i;
    struct Node *temp = head;

    if(head == NULL) {
        printf("List is empty.\n");
        return;
    }

    // Count nodes
    while(temp != NULL) {
        count++;
        temp = temp->next;
    }

    // Store data in array
    int arr[count];
    temp = head;

    for(i = 0; i < count; i++) {
        arr[i] = temp->data;
        temp = temp->next;
    }

    // Put data back in reverse order
    temp = head;
    for(i = count - 1; i >= 0; i--) {
        temp->data = arr[i];
        temp = temp->next;
    }

    printf("Data reversed successfully (links unchanged).\n");
}

int main() {
    struct Node *head = NULL;
    int choice, value;

    do {
        printf("\n1.Insert (for testing)");
        printf("\n2.Display");
        printf("\n3.Reverse Data Only");
        printf("\n0.Exit");
        printf("\nEnter choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter value: ");
                scanf("%d", &value);
                insertEnd(&head, value);
                break;

            case 2:
                display(head);
                break;

            case 3:
                reverseData(head);
                break;

            case 0:
                printf("Program exited.\n");
                break;

            default:
                printf("Invalid choice.\n");
        }

    } while(choice != 0);

    return 0;
}
